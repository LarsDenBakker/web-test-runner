{
  "name": "web-test-runner",
  "version": "0.0.3",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "export LOCAL_TESTING=true && node src/server/cli.js demo/test/**/*.test.js",
    "test:fail": "export LOCAL_TESTING=true && node src/server/cli.js demo/test/a.test.js",
    "test:pass": "export LOCAL_TESTING=true && node src/server/cli.js demo/test/c.test.js",
    "test:watch": "export LOCAL_TESTING=true && node src/server/cli.js demo/test/**/*.test.js --watch",
    "test:browser": "export LOCAL_TESTING=true && node src/server/cli.js demo/test/**/*.test.js --browser",
    "test:404-import": "export LOCAL_TESTING=true && node src/server/cli.js demo/test/404-import.test.js",
    "start": "es-dev-server --open demo/"
  },
  "bin": {
    "wtr": "./src/server/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LarsDenBakker/web-test-runner.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LarsDenBakker/web-test-runner/issues"
  },
  "homepage": "https://github.com/LarsDenBakker/web-test-runner#readme",
  "dependencies": {
    "es-dev-server": "^1.47.0",
    "puppeteer": "^3.0.2",
    "tap-spec": "^5.0.0",
    "co-body": "^6.0.0",
    "command-line-args": "^5.1.1",
    "globby": "^11.0.0"
  }
}
